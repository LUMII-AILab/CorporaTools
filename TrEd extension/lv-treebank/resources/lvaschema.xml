<?xml version="1.0" encoding="utf-8"?>
<pml_schema
  xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/"
  version="1.1">
  <revision>2.9</revision>
  <description>Schema for Latvian Treebank syntax layer: dependency based
	hybrid annotation style (default).</description>
  <reference name="mdata" readas="pml"/>
  <reference name="wdata" readas="pml"/>

  <import schema="lvmschema.xml" type="m-node.type"/>
  <import schema="lvmschema.xml" type="bool.type"/>

  <derive type="m-node.type">
    <structure>
      <member name="id" as_attribute="1" role="#ID" required="1">
        <cdata format="PMLREF"/>
      </member>
    </structure>
  </derive>

  <root name="lvadata" type="a-adata.type"/>

  <type name="a-adata.type">
    <structure>
      <member name="meta" required="0" type="a-meta.type"/>
      <member name="trees" role="#TREES" required="1">
        <list type="a-root.type" ordered="1"/>
      </member>
    </structure>
  </type>
  
  <type name="a-meta.type">
    <structure>
      <member name="annotation_info">
        <structure name="a-annotation-info">
          <member name="version_info"><cdata format="any"/></member>
          <member name="desc"><cdata format="any"/></member>
        </structure>
      </member>
    </structure>
  </type>

  <type name="a-root.type"> <!-- Sakne.-->
    <structure role="#NODE" name="a-node">
      <member name="id" role="#ID" as_attribute="1" required="1"><cdata format="ID"/></member>
      <member name="s.rf"><cdata format="PMLREF"/></member>
      <member name="ord" role="#ORDER"><cdata format="nonNegativeInteger"/></member>
	  <member name="comment"><cdata format="string"/></member> <!-- Vieta, kur dažādi labotāji var viens otram atsāt komentārus par koku.-->
      <member name="children" role="#CHILDNODES">
        <sequence content_pattern="node*, pmcinfo, node*">
		  <element name="node" type="a-node.type"/>
		  <element name="pmcinfo" type="a-pmcinfo.type"/>
        </sequence>
      </member>	  
    </structure>
  </type>
  
  
  <type name="a-node.type"> <!-- Patvaļīga node, kas var gan būt ar kaut ko paskaidrota, gan saturēt x vai pieturzīmekļa sastāvdaļas. -->
    <structure role="#NODE" name="a-node">
      <member name="id" role="#ID" as_attribute="1" required="1"><cdata format="ID"/></member>
      <member name="m.rf" role="#KNIT" type="m-node.type"/>
      <member name="reduction"><cdata format="any"/></member>
	  <member name="role" type="a-role.type" required="1"/>
      <member name="ord" role="#ORDER"><cdata format="nonNegativeInteger"/></member>
      <member name="children" role="#CHILDNODES">
        <sequence content_pattern="node*,(xinfo | pmcinfo |coordinfo)?, node*">
		  <element name="node" type="a-node.type"/>
		  <element name="xinfo" type="a-xinfo.type"/>
		  <element name="pmcinfo" type="a-pmcinfo.type"/>
 		  <element name="coordinfo" type="a-coordinfo.type"/>
       </sequence>
      </member>
    </structure>
  </type>

  <type name="a-xinfo.type"> <!-- Informācija par X-konstrukcijām. -->
    <structure role="#NODE" name="a-xinfo">
	  <member name="xtype" type="a-xtype.type" required="1"/>
      <member name="tag"  required="1"><cdata format="any"/></member>
      <member name="ord" role="#ORDER"><cdata format="nonNegativeInteger"/></member>
      <member name="children" role="#CHILDNODES">
        <sequence content_pattern="node+">
		  <element name="node" type="a-node.type"/>
        </sequence>
      </member>
    </structure>
  </type>
  
  <type name="a-pmcinfo.type"> <!-- Informācija par pieturzīmju konstrukcijām. -->
    <structure role="#NODE" name="a-pminfo">
	  <member name="pmctype" type="a-pmctype.type" required="1"/>
	  <member name="ord" role="#ORDER"><cdata format="nonNegativeInteger"/></member>
      <member name="children" role="#CHILDNODES">
        <sequence content_pattern="node+">
		  <element name="node" type="a-node.type"/>
        </sequence>
      </member>
    </structure>
  </type>

  <type name="a-coordinfo.type"> <!-- Informācija par sakārtojuma konstrukcijām. -->
    <structure role="#NODE" name="a-coordinfo">
	  <member name="coordtype" type="a-coordtype.type" required="1"/>
      <member name="tag"><cdata format="any"/></member>
	  <member name="ord" role="#ORDER"><cdata format="nonNegativeInteger"/></member>
      <member name="children" role="#CHILDNODES">
        <sequence content_pattern="node+">
		  <element name="node" type="a-node.type"/>
        </sequence>
      </member>
    </structure>
  </type>
  
  <type name="a-pmctype.type">
    <choice>
      <value>sent</value>		<!-- sentence,		teik -->
	  <value>utter</value>		<!-- utterance,		izteikums (bez verba) -->
	  <value>mainCl</value>		<!-- main clause,		patstTeik -->
      <value>subrCl</value>		<!-- subordinate clause,	palīgTeik -->
	  <value>interj</value>		<!-- punctuation mark construct for interjections**,	izsauksm -->
	  <value>spcPmc</value>		<!-- punctuation mark construct for pmc**,		savrup-->
	  <value>numPmc</value>		<!-- punctuation mark construct for numbers** -->
	  <value>insPmc</value>		<!-- punctuation mark construct for insertion** ,	iespraudums--> 
	  <value>particle</value>	<!-- punctuation mark construct for particle**-->
	  <value>tied</value>		<!-- tied parenthesis and tied insertion**-->
	  <value>dirSp</value>		<!-- direct speech,	tiešāRuna-->
	  <value>report</value>		<!-- reporting verb,	piebilde -->
	  <value>address</value>	<!-- address,		uzruna -->
	  <value>quot</value>	<!-- quotation marks,	pēdiņas -->
	  <value>abbr</value>	<!-- abbreviation -->
	  <value>N/A</value>	<!-- not available -->
    </choice>
  </type>
  
  <type name="a-xtype.type">
    <choice>
      <value>xPrep</value>		<!-- xPriev -->
      <value>xSimile</value>	<!-- simile, salīdzinājums -->
	  <value>xParticle</value>
      <value>xPred</value>		<!-- xIzt -->
      <value>xNum</value>		<!-- xSk -->
      <value>xApp</value>		<!-- apposition,		pielik -->
      <value>namedEnt</value>	<!-- xNoun -->
	  <value>wGrAnal</value>	<!-- analogue of subordinate word-group* -->
	  <value>phrasElem</value>	<!-- phraseological elements** -->
	  <value>N/A</value>
    </choice>
  </type>
  
  <type name="a-coordtype.type">
    <choice>
	  <value>crdParts</value>	<!-- coordinated parts of senence -->	
	  <value>crdClauses</value>		<!-- coordinated clauses -->  
	  <value>crdGeneral</value>		<!-- coordination with generalizing word -->
	  <value>N/A</value>		
	</choice>
  </type>

  <type name="a-role.type">
    <choice>
      <value>subj</value>	<!-- subject,		teikPr -->
      <value>attr</value>	<!-- attribute,		apz -->
      <value>obj</value>	<!-- object,			papild -->
      <value>adv</value>	<!-- adverbial modifier,	apst -->
      <value>spc</value>	<!-- semi-predicative component,	spk -->
      <value>sit</value>	<!-- situant*,		situants -->
	  <value>det</value>	<!-- determinant,	determinants -->
	  <value>no</value>		<!-- auxiliary words, addresses, etc**,	navLoc -->
	  
<!--      <value>redPred</value>	 reduced predicate -->
<!--      <value>redSubj</value>	 reduced subject -->
<!--      <value>redAttr</value>	 reduced attribute -->
<!--      <value>redObj</value>		 reduced object -->
<!--      <value>redAdv</value>		 reduced adverbial modifier -->
<!--      <value>redApp</value>		 reduced apposition -->
<!--      <value>redSpc</value>		 reduced semi-predicative component -->
<!--      <value>redSit</value>		 reduced situant* -->

      <value>subjCl</value>		<!-- subject clause,	teikPrPt -->
      <value>predCl</value>		<!-- predicative clause,	iztPt-->
      <value>attrCl</value>		<!-- attribute clause,	apzPt -->
      <value>objCl</value>		<!-- object clause,		papildPt -->
      <value>appCl</value>		<!-- apposition clause*,	pielikPt -->
      <value>placeCl</value>	<!-- subordinate clause of place,	vtApstPt -->
      <value>timeCl</value>		<!-- subordinate clause of time,	lApstPt -->
      <value>manCl</value>		<!-- subordinate clause of manner,	vdApstPt -->
      <value>degCl</value>		<!-- subordinate clause of degree,	mApstPt -->
      <value>causCl</value>		<!-- causal clause,				cApstPt-->
      <value>purpCl</value>		<!-- subordinate clause of purpose,	nlApstPt -->
      <value>condCl</value>		<!-- conditional clause,	nsApstPt-->
      <value>cnsecCl</value>	<!-- consecutive clause,	sekuPt-->
      <value>compCl</value>		<!-- comparative clause,	salPt -->
      <value>cncesCl</value>	<!-- concessive clause,	 pieļāvPt-->
      <value>motivCl</value>	<!-- causal clause,	subordinate clause of motivation**,	pamatPt -->
      <value>quasiCl</value>	<!-- quasi-clause,	relPt -->
	  
      <value>pred</value>	<!-- predicate,	izt -->
	  <value>prep</value>	<!-- preposition,	priev -->
	  <value>conj</value>	<!-- conjunction,	saiklis	(subordinating, coordinating) -->
	  <value>crdPart</value>	<!-- coordinated part (one of)**, vienlLoc -->
	  <value>mod</value>		<!-- modal word -->
<!--	  <value>redMod</value>		 reduced modal word** -->
	  <value>auxVerb</value>	<!-- auxiliary verb -->
<!--	  <value>redAuxVerb</value>	 reduced auxiliary verb** -->
	  <value>basElem</value>	<!-- basic element**,	pamatelem -->
<!--	  <value>parenth</value>	 parenthesis -->
	  <value>ins</value>		<!-- insertion -->
	  <value>punct</value>		<!-- punctuation mark,	pieturz -->
	  <value>gen</value>	<!-- generalizing word* -->
	  <value>genList</value>	<!-- list of specific items, used together with generalizing word** -->
	  
	  <value>N/A</value>
	</choice>
  </type>
  
</pml_schema>