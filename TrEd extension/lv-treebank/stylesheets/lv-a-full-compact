<? if (($${#name} eq 'xinfo')
	   or ($${#name} eq 'coordinfo')
	   or ($${#name} eq 'pmcinfo')) {
    '#{Node-hide:1}'
  } elsif ((($this->parent)->attr('#name')eq 'xinfo')) {
