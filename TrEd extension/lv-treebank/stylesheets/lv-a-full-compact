  (LV_A::has_nondep_child($this)->attr('#name') eq 'xinfo'
   or LV_A::has_nondep_child($this)->attr('#name') eq 'coordinfo')
  ?
    LV_A::has_nondep_child($this)->{tag}
  : '' ?>
