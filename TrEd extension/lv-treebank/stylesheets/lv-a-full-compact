    if (LV_A::has_nondep_child($this)->attr('#name') eq 'coordinfo')
  ?><?
  LV_A::has_nondep_child($this)->{pmctype}
    if (LV_A::has_nondep_child($this)->attr('#name') eq 'pmcinfo')
  ?><?
